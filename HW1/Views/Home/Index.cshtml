@model HW1.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>Yvonne Rogell</h1>
    <img src="~/Content/Img/puppies.gif" class="mx-auto d-block img-fluid img-thumbnail" />
    <br><br><br>
    <img src="~/Content/Img/snow_monkey.jpg" class="mx-auto d-block h-auto rounded w-75" />
</div>

<div class="row">
    <div class="col text-center">
        <h2>Number of Phones</h2>
        <h3>@Model.PhoneCount</h3>
    </div>
    <div class="col text-center">
        <h2>Number of Users</h2>
        <h3>@Model.UserCount</h3>
    </div>
    <div class="col text-center">
        <h2>Last Access Date</h2>
        <h3>@Model.LastAccessDate.ToShortDateString()</h3>
    </div>
</div>